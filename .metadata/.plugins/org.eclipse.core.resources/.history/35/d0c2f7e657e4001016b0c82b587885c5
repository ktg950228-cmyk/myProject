<mapper namespace="kr.co.ictb.ictb.dao.BoardCommDao">
	<select id="list" resultType="list" parameterType="int">
		SELECT writer, udate, comment_text FROM BOARD_COMMENTS WHERE board_num=#{board_num};
	</select>
	
	<insert id="add" parameterType="bcvo">
		INSERT INTO BOARD_COMMENTS VALUES(board_comments_num_pk.NEXTVAL, #{board_num}, #{writer}, sysdate, #{comment_text})
	</insert>
</mapper>